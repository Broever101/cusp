# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  spdlog_config = debug
  cusp_config = debug
endif
ifeq ($(config),release)
  spdlog_config = release
  cusp_config = release
endif

PROJECTS := spdlog cusp

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

spdlog:
ifneq (,$(spdlog_config))
	@echo "==== Building spdlog ($(spdlog_config)) ===="
	@${MAKE} --no-print-directory -C spdlog -f Makefile config=$(spdlog_config)
endif

cusp: spdlog
ifneq (,$(cusp_config))
	@echo "==== Building cusp ($(cusp_config)) ===="
	@${MAKE} --no-print-directory -C cusp -f Makefile config=$(cusp_config)
endif

clean:
	@${MAKE} --no-print-directory -C spdlog -f Makefile clean
	@${MAKE} --no-print-directory -C cusp -f Makefile clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   spdlog"
	@echo "   cusp"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"